/** 页面基础样式 **/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
}

/** 表单容器 **/
.form-container {
  background: white;
  border-radius: 0;
  padding: 32rpx;
  box-shadow: none;
  margin-bottom: 0;
  width: 100%;
  margin-top: 0rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: block;
}

.form-item {
  margin-bottom: 0rpx;
  padding: 32rpx;
}

/* 复合表单项 - 税率和承担方组合 */
.tax-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 32rpx;
}

.tax-rate {
  flex: 2;
  margin-right: 20rpx;
}

.tax-payer {
  flex: 2;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.tax-row .label {
  margin-bottom: 4rpx;
}

input {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

input:focus {
  border-color: #07c160;
  outline: none;
}

/** picker选择器 **/
.picker {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  color: #333;
}

/** 计算按钮 **/
.calculate-btn {
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-top: 32rpx;
  width: 100%;
}

.calculate-btn:active {
  background-color: #06ad56;
}

/** 结果区域 **/
.result-container {
  background: white;
  border-radius: 0;
  padding: 32rpx;
  box-shadow: none;
  width: 100%;
  margin-top: 20rpx;
}

.result-section {
  margin-bottom: 32rpx;
}

.result-section:last-child {
  margin-bottom: 0;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 80rpx;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
  padding-right: 4ex;
}

.text-bold .result-value {
  font-weight: 600;
  color: #07c160;
  font-size: 32rpx;
  max-width: 220rpx;
}
